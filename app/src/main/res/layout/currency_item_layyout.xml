<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/med_18">


    <ImageView android:layout_width="70dp"
               android:layout_height="70dp"
               android:id="@+id/flag_icon"
               android:padding="@dimen/med_18"
               android:scaleType="fitCenter"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
               android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="EUR" android:id="@+id/currencySymbolTxt"
              android:textSize="@dimen/med_24"
              app:layout_constraintStart_toEndOf="@+id/flag_icon" android:layout_marginStart="16dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="Euro" android:id="@+id/CurrencyNameTxt"
              app:layout_constraintTop_toBottomOf="@+id/currencySymbolTxt"
              app:layout_constraintStart_toEndOf="@+id/flag_icon"
              android:layout_marginStart="16dp"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/med_24"
              tools:text="$100000"
              android:id="@+id/amountTxt"
              app:layout_constraintStart_toEndOf="@+id/currencySymbolTxt"
              android:layout_marginStart="32dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"/>


    <ImageView android:layout_width="55dp" android:layout_height="55dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView"/>


</androidx.constraintlayout.widget.ConstraintLayout>